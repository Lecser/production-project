{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "removeComments": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "types": [
      "@types/node"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "./src/*"
      ]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["**/*.ts", "**/*.tsx",".eslintrc.js","config/jest/jest-setup.ts"]
}